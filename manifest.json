{
  "name": "external event bot chrome extension",
  "description": "send an event information to the slack channel through slack's incoming webhook",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://hooks.slack.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.connpass.com/*"],
      "js": ["src/content_scripts/connpass.ts"]
    }
  ]
}
